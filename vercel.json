{
  "version": 2,
  "builds": [
    {
      "src": "pipe/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "250mb" }
    },
    {
      "src": "pipe/static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "pipe/wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/pipe/static/$1"
    }
  ]
}
